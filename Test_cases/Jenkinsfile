pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout source code from version control
                git 'https://github.com/Drashti1603/Automation.git'
            }
        }
        
        stage('Run Robot Tests') {
            steps {
                // Execute Robot Framework tests
                robot Search_login_cart.robot
            }
        }
        
        stage('Publish Test Results') {
            steps {
                // Publish test results using JUnit plugin
                junit 'output/output.xml' // Specify the path to the output.xml file generated by Robot Framework
            }
        }
    }
}
